<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    tools:context="com.example.x1243.amdproject.SingleBlogPostPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/single_post_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@mipmap/add_btn" />

            <TextView
                android:id="@+id/single_post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="@string/post_title_goes_here"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/single_post_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="@string/post_description_goes_here"
                android:textSize="16dp" />

            <Button
                android:id="@+id/singleRemoveBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remove"
                android:visibility="invisible" />

        </LinearLayout>
    </ScrollView>

</android.support.v7.widget.CardView>
